@using Syncfusion.EJ2

@{
    ViewData["Title"] = "Home Page";
}

<div class="sb-content-overlay">
    <div class="sb-loading">
        <svg class="circular" height="40" width="40">
            <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="6" stroke-miterlimit="10" />
        </svg>
    </div>
    <div class="sb-caption">
        <h4 class="my-4">Appointment planner initializing...</h4>
    </div>
</div>

<div class="planner-wrapper" style="width: 100%; visibility: hidden; opacity:0">
  <ejs-sidebar id="plannerSiderBar" enableGestures="false" showBackdrop="false" closeOnDocumentClick="false">
    <e-content-template>
      <div class="dock">
          <div class="info align-center">
            <div class="image"><img src="~/assets/images/Admin.png" /></div>
            <div class="content nameContent">
              <p class="name" style="margin-top: 16px;">Jane Doe</p>
              <p class="user-type">Admin</p>
            </div>
          </div>
          <a class="dashboard" href="#/dashboard">
              <div class="sidebar-item dashboard">
                <span class="dashboard-image"><span class="icon-dashboard item-image"></span></span>
                <span class="text" title="dashboard">Dashboard</span>
              </div>
          </a>
          <a class="calendar" href="#/calendar">
            <div class="sidebar-item calendar">
                <span class="scheduler-image"><span class="icon-schedule item-image"></span></span>
                <span class="text" title="calendar">Calendar</span>
            </div>
          </a>
          <a class="doctors" href="#/doctors">
            <div class="sidebar-item doctors">
                <span class="doctors-image"><span class="icon-doctors item-image"></span></span>
                <span class="text" title="doctors">Doctors</span>
            </div>
          </a>
          <a class="patients" href="#/patients">
              <div class="sidebar-item patients">
                <span class="patients-image"><span class="icon-patients item-image"></span></span>
                <span class="text" title="patients">Patients</span>
              </div>
          </a>
          <a class="preference" href="#/preference">
              <div class="sidebar-item preference">
                <span class="preference-image"><span class="icon-preference item-image"></span></span>
                <span class="text" title="preference">Preference</span>
              </div>
          </a>
          <a class="about" href="#/about">
              <div class="sidebar-item about">
                <span class="about-image"><span class="icon-about item-image"></span></span>
                <span class="text" title="about">About</span>
              </div>
          </a>
        </div>
    </e-content-template>
  </ejs-sidebar>
  <main>
    <div class="planner-header">
      <div class="side-bar-opener">
        <span class="open-icon e-icons"></span>
      </div>
      <div class="name-cantainer">
        <span class="clinic-image icon-logo"></span>
        <h1 class="clinic-name"> APPOINTMENT PLANNER</h1>
      </div>
      <div class="logout-container">
        <div class="logout-icon-container"><span class="icon-logout logout-image"></span></div>
        <span class="logout-name">Logout</span>
      </div>
      <div class="sb-header-item sb-table-cell sb-download-wrapper">
        <a href="https://github.com/syncfusion/ej2-showcase-aspcore-appointment-planner" target="_blank">
          <div id="github" class="sb-github-btn">
            <div class="github-image">
              <img src="~/assets/Icons/Mark.svg" />
            </div>
          </div>
        </a>
      </div>
    </div>
    <div id="content" />
  </main>
</div>

<ejs-scripts></ejs-scripts>

@Html.EJS().ScriptManager()

<style>
    .dock a {
        color: #545454;
        font-size: inherit;
        text-decoration: none;
    }
</style>
